@model InventoryManagement.Models.BrandClass
@{
    ViewData["Title"] = "AddBrandData";
    
	Layout= "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Product Add Brand</h4>
				<h6>Create new product Brand</h6>
			</div>
		</div>
		<!-- /add -->
		<div class="card">
			<div class="card-body">
				<form method="post" action="/Brand/AddBrandData" enctype="multipart/form-data">
					<div class="row">
						@Html.HiddenFor(a => a.BrandId)
						<div class="col-lg-6 col-sm-6 col-12">
							<div class="form-group">
								<label>Brand Name</label>
								<input type="text" asp-for="BrandName">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>Brand Description</label>
								<textarea class="form-control" asp-for="BrandDesc"></textarea>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>	Brand Image</label>
								<div class="image-upload">
									<input type="file" asp-for="BrandImg">
									<div class="image-uploads">
										<img src="~/assets/img/icons/upload.svg" alt="img">
										<h4>Drag and drop a file to upload</h4>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<input type="submit" value="Submit" class="btn btn-submit me-2" />
							<input type="reset" value="Cancel" class="btn btn-cancel" />
						</div>
					</div>
				</form>
			</div>
		</div>
		<!-- /add -->
	</div>
</div>

