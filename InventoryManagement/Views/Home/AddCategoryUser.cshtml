@model InventoryManagement.Models.AddCategory
@{
    ViewData["Title"] = "AddCategoryUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Product Add Category</h4>
				<h6>Create new product Category</h6>
			</div>
		</div>
		<!-- /add -->
		<div class="card">
			<div class="card-body">
				<form method="post" asp-controller="Home" asp-action="AddCategoryUser" enctype="multipart/form-data">
					<div class="row">
						@Html.HiddenFor(a=>a.CategoryId)
						<div class="col-lg-6 col-sm-6 col-12">
							<div class="form-group">	
								<label>Category Name</label>
								<input type="text" asp-for="CategoryName">
							</div>
						</div>
						<div class="col-lg-6 col-sm-6 col-12">
							<div class="form-group">
								<label>Category Code</label>
								<input type="text" asp-for="CategoryCode">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>Description</label>
								<textarea class="form-control" asp-for="CategoryDesc"></textarea>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>	Product Image</label>
								<div class="image-upload">
									<input type="file" asp-for="CategoryImage">
									<div class="image-uploads">
										<img src="~/assets/img/icons/upload.svg" alt="img">
										<h4>Drag and drop a file to upload</h4>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<input type="submit" value="Submit" class="btn btn-submit me-2" />
							<a href="/Home/ViewProduct" class="btn btn-cancel">Cancel</a>
						</div>
					</div>
				</form>				
			</div>
		</div>
		<!-- /add -->
	</div>
</div>
