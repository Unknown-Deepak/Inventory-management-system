@model InventoryManagement.Models.SubCategoryDB
@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content">
		<div class="page-header">
			<div class="page-title">
				<h4>Product Add sub Category</h4>
				<h6>Create new product Category</h6>
			</div>
		</div>
		<!-- /add -->
		<div class="card">
			<div class="card-body">
				<form method="post" action="" enctype="multipart/form-data">
					<div class="row">
						@Html.HiddenFor(a=>a.SubCategoryId)
						<div class="col-lg-4 col-sm-6 col-12">
							<div class="form-group">
								<label>Parent Category</label>
								<select class="form-control" name="CategoryId" id="CategoryId">
										@foreach(var dr in Model.CategoryList)
										{
											<option value="@dr.Value">@dr.Text</option>	
										}
									</select>
							</div>
						</div>
						<div class="col-lg-4 col-sm-6 col-12">
							<div class="form-group">
								<label>Sub Category Name</label>
								<input type="text" asp-for="SubCategoryName">
							</div>
						</div>
						<div class="col-lg-4 col-sm-6 col-12">
							<div class="form-group">
								<label>Sub Category Code</label>
								<input type="text" asp-for="SubCategoryCode">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>Sub Category Description</label>
								<textarea class="form-control" asp-for="SubCategoryDisc"></textarea>
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group">
								<label>Sub Category	Product Image</label>
								<div class="image-upload">
									<input type="file" asp-for="SubCategoryImage">
									<div class="image-uploads">
										<img src="~/assets/img/icons/upload.svg" alt="img">
										<h4>Drag and drop a file to upload</h4>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<input type="submit" value="Submit" class="btn btn-submit me-2" />
							<a href="/SubCategory/ViewPage" class="btn btn-cancel">Cancel</a>
						</div>
					</div>
				</form>
				
			</div>
		</div>
		<!-- /add -->
	</div>
</div>
<!-- /Main Wrapper -->
<script>
	$(document).ready(function () {
		window.location.href = "/AddCategory/ViewPage";
	})
</script>